# ===========================================
# Image Gallery 2 - Environment Configuration
# ===========================================

# ============ BACKEND CONFIGURATION ============

# Server Settings
PORT=2020
HOST=0.0.0.0
VRAM_MODE=balanced  # Options: low, balanced, high

# Moondream Installation Path
# Default: ~/.moondream-station/moondream-station
MOONDREAM_PATH=/root/.moondream-station/moondream-station

# Model Storage Directory
# Default: ~/.moondream-station/models
MOONDREAM_MODELS_DIR=/root/.moondream-station/models

# ============ FRONTEND CONFIGURATION ============

# API Endpoints
VITE_API_BASE_URL=http://localhost:2020

# Google Gemini API (Optional - for cloud vision)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (Optional - for DALL-E generation)
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Grok API (Optional)
VITE_GROK_API_KEY=your_grok_api_key_here

# Moondream Cloud API (Optional)
VITE_MOONDREAM_API_KEY=your_moondream_cloud_api_key_here

# ============ DEPLOYMENT SETTINGS ============

# Node Environment
NODE_ENV=production

# Build Configuration
VITE_BUILD_MODE=production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============ GPU/CUDA CONFIGURATION ============

# CUDA Visible Devices (which GPUs to use)
CUDA_VISIBLE_DEVICES=0

# PyTorch CUDA Memory Management
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# ============ LOGGING ============

# Log Level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============ OPTIONAL: DATABASE ============

# If using external database for image storage
# DATABASE_URL=postgresql://user:password@localhost:5432/gallery
